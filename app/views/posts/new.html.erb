<h1>New Post</h1>

<% if @current_user %>
<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>
   <div class="mb-3">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </div>
   <div class="mb-3">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </div>
   <div class="mb-3">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </div>
  <p>
    <%= form.submit "Post", :class => "btn btn-warning" %>
  </p>
<% end %>

<div class="row">
 <div class="col-sm-2 col-md-4">
 <!-- First content -->
 </div>
 <div class="col-sm-2 col-md-4">
 <!-- Second content -->
 </div>
 <div class="col-sm-2 col-md-4">
 <!-- Third content -->
 </div>
 <div class="col-sm-2 col-md-4">
 <!-- Fourth content -->
 </div>
</div>


<% end %>
