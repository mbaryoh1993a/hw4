<h1><%= @place["name"] %></h1>

<% if @current_user %>


<div class="row">

<% for post in @posts %>
<div class="col-md-4">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
  </div>
<% end %>
</div>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary btn-lg active" role="button" aria-pressed="true" >New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
<% end %>